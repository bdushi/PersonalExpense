<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.TextAppearance.AppCompat.Day">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Sunday">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sunday</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Year">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Month">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>