<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Small.Black" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Medium.Black" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
