<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="budgetDetails"
            type="al.bruno.personal.expense.model.BudgetDetails"/>
        <variable
            name="decrementOnClick"
            type="al.bruno.personal.expense.callback.OnClick"/>
        <variable
            name="incrementOnClick"
            type="al.bruno.personal.expense.callback.OnClick"/>
        <variable
            name="incomesOnClick"
            type="al.bruno.personal.expense.callback.OnClick"/>
        <variable
            name="expenseOnClick"
            type="al.bruno.personal.expense.callback.OnClick"/>
        <variable
            name="logAdapter"
            type="al.bruno.personal.expense.adapter.CustomAdapter"/>
        <variable
            name="pieData"
            type="al.bruno.personal.expense.entities.ChartDataObject&lt;String,com.github.mikephil.charting.data.PieData&gt;"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/AppTheme.AppBarOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/decrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_5"
                    android:onClick="@{()->decrementOnClick.onClick()}"
                    android:src="@drawable/ic_chevron_left_white_36"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Large"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/increment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_5"
                    android:onClick="@{()->incrementOnClick.onClick()}"
                    android:src="@drawable/ic_chevron_right_white_36dp"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_summary_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/summary"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            app:layout_constraintTop_toBottomOf="@id/app_bar_date_layout"/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_10"
            android:contentDescription="@string/add_your_incomes"
            bind:pieData="@{pieData}"
            app:layout_constraintBottom_toBottomOf="@+id/home_remaining"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_balance_label"
            app:layout_constraintEnd_toStartOf="@id/home_balance_label"
            app:layout_constraintHorizontal_weight="2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_balance_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_10"
            app:layout_constraintTop_toBottomOf="@id/home_summary_label"
            app:layout_constraintStart_toEndOf="@id/pie_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            style="@style/Base.TextAppearance.AppCompat.Body2" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_10"
            android:text="@{budgetDetails.balanceStr}"
            app:layout_constraintTop_toBottomOf="@id/home_balance_label"
            app:layout_constraintStart_toEndOf="@id/pie_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            style="@style/Base.TextAppearance.AppCompat.Large" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_remaining_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_10"
            android:text="@string/remaining"
            app:layout_constraintTop_toBottomOf="@id/home_balance"
            app:layout_constraintStart_toEndOf="@id/pie_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_remaining"
            app:layout_constraintHorizontal_weight="2"
            style="@style/Base.TextAppearance.AppCompat.Body2" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_remaining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_10"
            android:text="@{budgetDetails.budgetStr}"
            app:layout_constraintTop_toBottomOf="@id/home_remaining_label"
            app:layout_constraintStart_toEndOf="@id/pie_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            style="@style/Base.TextAppearance.AppCompat.Large" />
         <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:adapter="@{logAdapter}"
            app:spanCount="4"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_footer_layout"
            app:layout_constraintTop_toBottomOf="@id/home_remaining"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            app:cardCornerRadius="@dimen/elevation_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="@{()->incomesOnClick.onClick()}">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_incomes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{budgetDetails.incomesStr}"
                        android:background="@color/cyan_700"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/home_expense"
                        app:layout_constraintBottom_toTopOf="@id/home_incomes_label"
                        style="@style/Base.TextAppearance.AppCompat.Body2"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_incomes_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/incomes"
                        android:background="@color/cyan_700"
                        app:layout_constraintEnd_toEndOf="@id/home_incomes"
                        app:layout_constraintTop_toBottomOf="@id/home_incomes"
                        app:layout_constraintStart_toStartOf="@id/home_incomes"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/Base.TextAppearance.AppCompat.Body2"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:onClick="@{()->expenseOnClick.onClick()}">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_expense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{budgetDetails.expenseStr}"
                    android:background="@color/teal_700"
                    app:layout_constraintStart_toEndOf="@id/home_incomes"
                    app:layout_constraintBottom_toTopOf="@id/home_expense_label"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Base.TextAppearance.AppCompat.Body2"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_expense_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expense"
                    android:gravity="center"
                    android:background="@color/teal_700"
                    app:layout_constraintEnd_toEndOf="@id/home_expense"
                    app:layout_constraintTop_toBottomOf="@id/home_expense"
                    app:layout_constraintStart_toStartOf="@id/home_expense"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/Base.TextAppearance.AppCompat.Body2"/>
            </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
