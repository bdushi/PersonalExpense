<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="expenseDetails"
            type="al.bruno.personal.expense.model.ExpenseDetails"/>
        <variable
            name="incomesOnClick"
            type="al.bruno.personal.expense.callback.OnClick"/>
        <variable
            name="expenseOnClick"
            type="al.bruno.personal.expense.callback.OnClick"/>
        <variable
            name="addExpenseOnClick"
            type="al.bruno.personal.expense.callback.OnClick"/>
        <variable
            name="logAdapter"
            type="al.bruno.personal.expense.adapter.CustomAdapter"/>
        <variable
            name="pieData"
            type="al.bruno.personal.expense.entities.ChartDataObject&lt;String, com.github.mikephil.charting.data.PieData&gt;"/>

        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/add_your_incomes"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="@{() ->incomesOnClick.onClick()}"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_incomes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{expenseDetails.incomesStr}"
                        style="@style/Base.TextAppearance.AppCompat.Body2"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_incomes_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/incomes"
                        style="@style/Expense.Header.Label"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dimen_2"
                    android:layout_height="match_parent"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:onClick="@{() ->expenseOnClick.onClick()}">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_expense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{expenseDetails.expenseStr}"
                        style="@style/Base.TextAppearance.AppCompat.Body2"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_expense_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/expense"
                        android:gravity="center"
                        style="@style/Expense.Header.Label"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dimen_2"
                    android:layout_height="match_parent"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{expenseDetails.balanceStr}"
                        android:gravity="center"
                        style="@style/Base.TextAppearance.AppCompat.Body2"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_balance_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/balance"
                        android:gravity="center"
                        style="@style/Expense.Header.Label"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_5"
                android:adapter="@{logAdapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="4"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_white_36dp"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_gravity="end|bottom"
                app:layout_behavior="al.bruno.personal.expense.util.FabScrollBehavior"
                android:onClick="@{()->addExpenseOnClick.onClick()}"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</layout>
