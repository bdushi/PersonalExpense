<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="categories"
            type="al.bruno.financaime.model.Categories"/>
        <variable
            name="onItemClickListener"
            type="al.bruno.financaime.callback.OnItemClickListener&lt;al.bruno.financaime.model.Categories&gt;"/>
    </data>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:text="@{categories.category}"
        android:onLongClick="@{(v) ->onItemClickListener.onLongItemClick(categories)}"
        style="@style/TextAppearance.AppCompat.Large"/>
</layout>