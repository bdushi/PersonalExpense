<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="category"
            type="al.bruno.financaime.model.Category"/>
        <variable
            name="onItemClickListener"
            type="al.bruno.financaime.callback.OnItemClickListener&lt;al.bruno.financaime.model.Category&gt;"/>
    </data>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:text="@{category.category}"
        android:onClick="@{(v) ->onItemClickListener.onLongItemClick(category)}"
        style="@style/TextAppearance.AppCompat.Large"/>
</layout>